{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest"],
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true
  },
  "include": ["src/**/*.test.ts", "src/**/*.test.tsx"],
  "exclude": ["node_modules"]
}
